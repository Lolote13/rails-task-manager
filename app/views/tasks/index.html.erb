<h1>List all tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% task.completed ? @done = "[X]" : @done = "[ ]" %>
    <li><%= @done %> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>


<%= link_to "Add a new task", new_task_path %>
